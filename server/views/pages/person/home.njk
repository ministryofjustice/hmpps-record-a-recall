{% extends "../../partials/prisonerBannerLayout.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "hmpps/components/court-cases-release-dates/sub-navigation/macro.njk" import subNavigation %}
{% from "hmpps/components/court-cases-release-dates/things-to-do/macro.njk" import thingsToDo %}
{% from "hmpps/components/court-cases-release-dates/offence-card/macro.njk" import offenceCard %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% set pageTitle = applicationName + " - person home" %}
{% set pageId = "person-home" %}

{% block beforeContent %}

  {{ super() }}

  {% block subNavigation %}
    {{ subNavigation(serviceDefinitions.services, 'recalls') }}
  {% endblock %}

  {% if errorMessage %}
    {{ govukWarningText({
      text: errorMessage,
      iconFallbackText: "Warning"
    }) }}
  {%  endif %}

{% endblock %}

{% block content %}
<div class="govuk-grid-row govuk-!-margin-top-6">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">Recalls</h1>
    {{ thingsToDo(serviceDefinitions, 'recalls') }}

    {% if not recalls or recalls.length == 0 %}
      <p>There are no recalls recorded</p>
    {% endif %}

    {{ govukButton({
      classes: "govuk-button--secondary",
      text: "Record a recall",
      preventDoubleClick: true,
      href: '/person/' + nomisId + '/record-recall?entrypoint=recalls',
      attributes: {  'data-qa': 'create-new-recall-btn' }
    }) }}

    {% for recall in recalls %}
      {{ recallCard(recall, latestRecallId) }}
    {% endfor %}

    {# Insert Court Cases info and offence cards here #}
    <div class="govuk-!-margin-top-8">
      {{ cardInfo('Court Cases', summarisedSentencesGroups.length ~ ' cases with sentences') }}

      {% if summarisedSentencesGroups and summarisedSentencesGroups.length %}
        {{ sentenceCards(summarisedSentencesGroups, offenceNameMap) }}
      {% else %}
        <p>No court cases or sentences available.</p>
      {% endif %}
    </div>

  </div>
</div>
{% endblock %}

{# Macros #}

{% macro recallCard(recall, latestRecallId) %}
<div class="govuk-summary-card govuk-!-margin-bottom-6">
  <div class="govuk-summary-card__title-wrapper">
    <h2 class="govuk-summary-card__title">Recalled on {{ recall.revocationDate | date }}
      <span class="moj-badge moj-badge--green govuk-!-margin-bottom-1 govuk-!-margin-left-1">Active</span>
    </h2>
    <ul class="govuk-summary-card__actions">
      <li class="govuk-summary-card__action">
        <a class="govuk-link" href="/person/{{ nomisId }}/edit-recall/{{ recall.recallId }}?entrypoint=recalls">Edit<span class="govuk-visually-hidden"> recall recorded on {{ recall.revocationDate | date }}</span></a>
      </li>
      {% if recall.recallId == latestRecallId %}
      <li class="govuk-summary-card__action">
        <a class="govuk-link govuk-link--destructive" href="/person/{{ nomisId }}/recall/{{ recall.recallId }}/delete?from=overview">Delete<span class="govuk-visually-hidden"> recall recorded on {{ recall.revocationDate | date }}</span></a>
      </li>
      {% endif %}
    </ul>
  </div>
  <div class="govuk-summary-card__content" id="recall-summary">
    <div class="govuk-grid-row govuk-!-padding-bottom-2 govuk-!-margin-top-2">
      <div class="govuk-grid-column-one-half">
        {{ cardInfo('Recall type', recall.recallType.description) }}
        {{ cardInfo('Location', recall.locationName if recall.locationName else recall.location ) }}
      </div>
      <div class="govuk-grid-column-one-half">
        {{ cardInfo('Arrest date',  recall.returnToCustodyDate | date if recall.returnToCustodyDate else 'In prison at recall' ) }}
        {{ cardInfo('UAL (unlawfully at large)', recall.ualString if recall.ualString else 'None recorded') }}
      </div>
    </div>
  </div>
</div>
{% endmacro %}

{% macro cardInfo(field, value) %}
  <h3 class="govuk-heading-s govuk-!-margin-bottom-1">{{ field }}</h3>
  <p class="govuk-body govuk-!-margin-bottom-2">{{ value }}</p>
{% endmacro %}

{% macro sentenceCards(groups, offenceNameMap) %}
    {% for group in groups %}
        <h3 class="govuk-heading-m">{{ group.caseRefAndCourt }} </h3>

        {% for charge in group.sentences %}
            {{ sentenceCard(charge, offenceNameMap) }}
        {% endfor %}
        
        {% if group.hasIneligibleSentences %}
            {% set ineligibleHtml %}
                {% for sentence in group.ineligibleSentences %}
                    {{ sentenceCard(sentence, offenceNameMap) }}
                {% endfor %}
            {% endset %}
            {% set summaryHtml %}
                View sentences that are ineligible for recall ({{ group.ineligibleSentences | length }})
            {% endset %}
            {{ govukDetails({
                summaryHtml: summaryHtml,
                html: ineligibleHtml
            }) }}
        {% endif %}
    {% endfor %}
{% endmacro %}

{% macro sentenceCard(charge, offenceNameMap) %}
  {{ offenceCard({
    offenceCode: charge.offenceCode,
    offenceName: offenceNameMap[charge.offenceCode],
    offenceStartDate: charge.offenceStartDate | formatDate if charge.offenceStartDate else 'Not entered',
    offenceEndDate: charge.offenceEndDate | formatDate,
    hideOutcome: true,
    outcome: charge.sentence.outcome,
    countNumber: charge.sentence.chargeNumber,
    convictionDate: charge.sentence.convictionDate | formatDate if charge.sentence.convictionDate else 'Not available',
    terrorRelated: false,
    isSentenced: true,
    periodLengths: charge.sentence.periodLengths | periodLengthsToSentenceLengths,
    sentenceServeType: charge.sentence.sentenceServeType,
    consecutiveTo: charge.sentence.consecutiveToChargeNumber,
    sentenceType: charge.sentence.sentenceType.description,
    detailsClasses: 'govuk-!-padding-4'
  }) }}
{% endmacro %}
