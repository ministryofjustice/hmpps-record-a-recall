{% extends "../../partials/prisonerBannerLayout.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}


{% block content %}
    <div class='govuk-grid-row'>
        <div class='govuk-grid-column-two-thirds'>
            {{ govukBackLink({
                text: "Back",
                href: backLink
            }) }}
            <h1 class="govuk-heading-xl" id="manual-recall-heading">Manual recall entry required</h1>
            {% for error in autoRecallFailErrors %}
                <h2 class="govuk-heading-m" id="auto-recall-fail-reason-{{loop.index}}">{{ error }}</h2>
            {% endfor %}
        </div>
    </div>

{% endblock %}
