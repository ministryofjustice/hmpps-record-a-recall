{% extends "../../partials/prisonerBannerLayout.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{%- from "moj/components/interruption-card/macro.njk" import interruptionCard -%}

{% block beforeContent %}
  {{ super() }}
  <div class="govuk-width-container" xmlns="http://www.w3.org/1999/html">
    <div class="govuk-grid-row govuk-!-margin-bottom-0">
      <div class="govuk-grid-column-two-thirds">
        <nav>
          {{ govukBackLink({
            text: "Back",
            href: backLink
          }) }}
        </nav>
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}
    {% set formMethod = options.method | default('post') %}
    {% set formAction = options.action | default('') %}
    {% set formEnctype = options.enctype | default('') %}

    <form method="{{ formMethod }}" action="{{ formAction }}"
        {% if formEnctype %}
          enctype="{{ formEnctype }}"
        {% endif %}
    >

      {% if formMethod == 'post' %}
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
      {% endif %}


      {% call interruptionCard({
        heading: "Is this the correct recall type?",
        primaryAction: {
          text: "Continue",
          preventDoubleClick: true,
          type: "submit"
        },
        secondaryAction: {
          text: "Cancel",
          href: cancelLink,
          preventDoubleClick: true,
          type: "reset"
        }
    }) -%}
        <p>This service has identified that the recall type selected</p>
        <p>The recall type currently selected is: {{ selectedRecallType.description }}.</p>
        <h2 class="govuk-heading-m moj-interruption-card__heading">What to do next</h2>
        <p>1. Check with PPCS that this is the correct recall type.</p>
        <p>2. If you need to make a change to the recall, <a href="{{ backLink }}" class="govuk-link govuk-link--no-visited-state">go back and update the recall details.</a></p>
        <p>3. Once you have confirmed the recall is correct, select continue.</p>
  {%- endcall %}

    </form>
{% endblock %}
