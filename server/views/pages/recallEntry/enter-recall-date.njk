{% extends "../../partials/prisonerBannerLayout.njk" %}

{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% block beforeContent %}
  {{ super() }}
  <nav>
    {% if submitToCheckAnswers %}
      {% set backlinkHref = "/person/" + nomsId + "/recall-entry/check-your-answers" %}
    {% else %}
      {% set backlinkHref = "/person/" + nomsId %}
    {% endif %}
    {{ govukBackLink({
      text: "Back",
      href: backlinkHref
    }) }}
  </nav>
{% endblock %}

{% block content %}
  {% if errors.length %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: errors
    }) }}
  {% endif %}

  <form method="post"
        action="/person/{{ nomsId }}/recall-entry/enter-recall-date{{ "?submitToCheckAnswers=true" if submitToCheckAnswers }}">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
    {{ govukDateInput({
      id: "recallDate",
      fieldset: {
        legend: {
          html: '<h1 class="govuk-heading-l"><span class="govuk-caption-l">Record a recall</span>Enter the date the personâ€™s licence was revoked</h1>',
          isPageHeading: true,
          classes: "govuk-fieldset__legend--l"
        }
      },
      items: [
        {
          id: 'recallDateDay',
          label: 'Day',
          name: "recallDate[day]",
          value: recall.recallDateForm.day if (recall and recall.recallDateForm),
          classes: "govuk-input--width-2",
          attributes: { 'maxlength': 2 }
        },
        {
          id: 'recallDateMonth',
          label: 'Month',
          name: "recallDate[month]",
          value: recall.recallDateForm.month if (recall and recall.recallDateForm),
          classes: "govuk-input--width-2",
          attributes: { 'maxlength': 2 }
        },
        {
          id: 'recallDateYear',
          label: 'Year',
          name: "recallDate[year]",
          value: recall.recallDateForm.year if (recall and recall.recallDateForm),
          classes: "govuk-input--width-4",
          attributes: { 'maxlength': 4 }
        }
      ],
      hint: {
        text: "For example, 27 3 2022"
      }
    }) }}

    <div class="govuk-button-group">
      {{ govukButton({
        text: "Continue",
        type: submit,
        preventDoubleClick: true,
        attributes: { 'data-qa': 'submit-enter-recall-date' }
      }) }}
    </div>
  </form>
{% endblock %}
