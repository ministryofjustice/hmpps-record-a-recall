{% from "partials/components/sentence/macro.njk" import sentenceCard %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{# TODO this code has been lifted from one of the screens in the recall journey, it will eventually evolve into a reusable design component for listing a court case with associated sentences#}

<h2 data-qa="court-case-main-heading" class="govuk-heading-m govuk-!-font-weight-bold govuk-!-margin-top-3 govuk-!-margin-bottom-3">
  {% if courtCase.reference %}
    {{ courtCase.reference }} at
  {% endif %}
  {{ courtCase.courtName | default("N/A") }} on {{ courtCase.appearanceDate | formatDate | default("N/A") }}

</h2>

{% for sentence in sentences %}
  {{sentenceCard(sentence)}}
{% endfor %}

{% if expiredSentences.length %}
  {% set expiredHtml %}
    {% for sentence in expiredSentences %}
      {{sentenceCard(sentence)}}
    {% endfor %}
  {% endset %}
  {{ govukDetails({
    summaryText: "View sentences with an expired SLED (" + expiredSentences.length + ")",
    html: expiredHtml
  }) }}
{% endif %}

{% if ineligibleSentences.length %}
  {% set ineligibleHtml %}
    {% for sentence in ineligibleSentences %}
      {{sentenceCard(sentence)}}
    {% endfor %}
  {% endset %}
  {{ govukDetails({
    summaryText: "View sentences that are ineligible for recall (" + ineligibleSentences.length + ")",
    html: ineligibleHtml
  }) }}
{% endif %}
 
